<!-- views/pantries/edit.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editing <%= pantry.title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <!-- TODO: localhost doesnt have any edit functionality -->
  <h1>Edit <%= pantry.name %> at <%= pantry.id %></h1>
  <div class="edit-body">
  <form
    action="/users/<%= user._id %>/pantries/<%= pantry._id %>?_method=PUT"
    method="POST"
  >
    <label for="name">name:</label>
    <input
      type="text"
      name="name"
      id="name"
      value="<%= pantry.name %>"
    >
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= pantry.title %>">
    <label for="notes">Notes:</label>
    <textarea name="notes" id="notes"><%= pantry.notes %></textarea>
    <label for="postingLink">Posting Link:</label>
    <input
      type="text"
      name="postingLink"
      id="postingLink"
      value="<%= pantry.postingLink %>"
    >
    <label for="status">Status:</label>
    <select id="status" name="status">
      <option
        value="interested"
        <%= pantry.status === "interested" ? "selected" : "" %>
      >
        Interested
      </option>
      <option
        value="applied"
        <%= pantry.status === "applied" ? "selected" : "" %>
      >
        Applied
      </option>
      <option
        value="interviewing"
        <%= pantry.status === "interviewing" ? "selected" : "" %>
      >
        Interviewing
      </option>
      <option
        value="rejected"
        <%= pantry.status === "rejected" ? "selected" : "" %>
      >
        Rejected
      </option>
      <option
        value="accepted"
        <%= pantry.status === "accepted" ? "selected" : "" %>
      >
        Accepted
      </option>
    </select>
    <button type="submit">Update Pantry</button>
  </form>
</div>
</body>
</html>
